            <div class="top-order">
                <div class="order-heading">
                    Замовлення <span class="badge" id="count"></span>
                </div>
            </div>

            <div id="cart" class="creating-order">
            
            
           
            
            </div>
            
             <div class="bottom-order-buy hidden">
                    <div class="heading">Сумма замовлення:</div>
